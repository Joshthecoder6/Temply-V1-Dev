<div class="faq-section-{{ section.id }} st_check-section--{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="faq-header-{{ section.id }}">
        <h2 class="faq-title-{{ section.id }} {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.subtitle != blank -%}
          <div class="faq-subtitle-{{ section.id }} rte">
            {{ section.settings.subtitle }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="faq-content-{{ section.id }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'faq_item' -%}
              <div class="faq-accordion-{{ section.id }}" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
                <details class="faq-details-{{ section.id }}" {% if block.settings.open_by_default %}open{% endif %}>
                  <summary class="faq-summary-{{ section.id }}">
                    <div class="faq-question-wrapper-{{ section.id }}">
                      <h3 class="faq-question-{{ section.id }}">{{ block.settings.question }}</h3>
                    </div>
                    <div class="faq-icon-{{ section.id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="6 9 12 15 18 9"></polyline>
                      </svg>
                    </div>
                  </summary>
                  <div class="faq-answer-wrapper-{{ section.id }}">
                    <div class="faq-answer-{{ section.id }} rte">
                      {{ block.settings.answer }}
                    </div>
                  </div>
                </details>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="faq-placeholder-{{ section.id }}">
        <p>{{ section.settings.no_items_text }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
(function() {
  'use strict';
  const sectionId = '{{ section.id }}';
  const sectionSelector = '.st_check-section--' + sectionId;
  
  function checkAppEmbed() {
    const embedMarker = document.getElementById('temply-app-embed-active');
    const sectionElement = document.querySelector(sectionSelector);
    
    if (!sectionElement) return;
    
    if (!embedMarker) {
      // Hide section completely, no warning banner
      sectionElement.style.display = 'none';
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', checkAppEmbed);
  } else {
    checkAppEmbed();
  }
})();
</script>

<style>
  .faq-section-{{ section.id }} {
    padding: var(--section-padding-vertical, 4rem) 0;
    {% if section.settings.background_gradient != blank %}
      background: {{ section.settings.background_gradient }};
    {% endif %}
    {% if section.settings.text_color != blank %}
      color: {{ section.settings.text_color }};
    {% endif %}
  }

  .faq-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .faq-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .faq-header-{{ section.id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 3rem;
  }

  .faq-title-{{ section.id }} {
    margin: 0 0 1rem 0;
    font-weight: 700;
  }

  .faq-subtitle-{{ section.id }} {
    margin: 0;
    {% if section.settings.text_color != blank %}
      color: {{ section.settings.text_color }};
      opacity: 0.7;
    {% else %}
      color: rgba(var(--color-foreground), 0.7);
    {% endif %}
  }

  .faq-content-{{ section.id }} {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
  }

  .faq-accordion-{{ section.id }} {
    display: block;
    position: relative;
  }

  {% if section.settings.show_top_divider %}
  .faq-accordion-{{ section.id }}:first-child::before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: {{ section.settings.divider_thickness }}px;
    background: {{ section.settings.divider_color }};
    opacity: {{ section.settings.divider_opacity | divided_by: 100.0 }};
  }
  {% endif %}

  .faq-accordion-{{ section.id }}:not(:last-child)::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: {{ section.settings.divider_thickness }}px;
    background: {{ section.settings.divider_color }};
    opacity: {{ section.settings.divider_opacity | divided_by: 100.0 }};
  }

  {% if section.settings.show_bottom_divider %}
  .faq-accordion-{{ section.id }}:last-child::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: {{ section.settings.divider_thickness }}px;
    background: {{ section.settings.divider_color }};
    opacity: {{ section.settings.divider_opacity | divided_by: 100.0 }};
  }
  {% endif %}

  .faq-details-{{ section.id }} {
    border: none;
    margin: 0;
  }

  .faq-summary-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ section.settings.accordion_padding }}px 0;
    cursor: pointer;
    list-style: none;
    gap: 2rem;
  }

  .faq-summary-{{ section.id }}::-webkit-details-marker {
    display: none;
  }

  .faq-question-wrapper-{{ section.id }} {
    flex: 1;
  }

  .faq-question-{{ section.id }} {
    margin: 0;
    font-size: {{ section.settings.question_font_size }}px;
    font-weight: {{ section.settings.question_font_weight }};
    line-height: 1.4;
  }

  .faq-icon-{{ section.id }} {
    flex-shrink: 0;
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
  }

  .faq-icon-{{ section.id }} svg {
    width: 24px;
    height: 24px;
    {% if section.settings.text_color != blank %}
      stroke: {{ section.settings.text_color }};
    {% endif %}
  }

  .faq-details-{{ section.id }}[open] .faq-icon-{{ section.id }} {
    transform: rotate(180deg);
  }

  .faq-answer-wrapper-{{ section.id }} {
    padding: 0 0 {{ section.settings.accordion_padding }}px 0;
    animation: faq-slideDown-{{ section.id }} 0.3s ease;
  }

  .faq-answer-{{ section.id }} {
    {% if section.settings.text_color != blank %}
      color: {{ section.settings.text_color }};
      opacity: 0.8;
    {% else %}
      color: rgba(var(--color-foreground), 0.8);
    {% endif %}
    line-height: 1.6;
  }

  .faq-answer-{{ section.id }} p:first-child {
    margin-top: 0;
  }

  .faq-answer-{{ section.id }} p:last-child {
    margin-bottom: 0;
  }

  @keyframes faq-slideDown-{{ section.id }} {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .faq-placeholder-{{ section.id }} {
    text-align: center;
    padding: 3rem 1rem;
    {% if section.settings.text_color != blank %}
      color: {{ section.settings.text_color }};
      opacity: 0.5;
    {% else %}
      color: rgba(var(--color-foreground), 0.5);
    {% endif %}
  }

  /* Hover effects */
  .faq-summary-{{ section.id }}:hover {
    opacity: 0.8;
  }
</style>

<script>
  (function() {
    // FAQ Accordion functionality for section {{ section.id }}
    class FaqAccordion{{ section.id | replace: '-', '_' }} {
      constructor() {
        this.sectionId = '{{ section.id }}';
        this.accordions = document.querySelectorAll('.faq-accordion-' + this.sectionId);
        this.init();
      }

      init() {
        this.accordions.forEach((accordion) => {
          const details = accordion.querySelector('.faq-details-' + this.sectionId);
          const summary = accordion.querySelector('.faq-summary-' + this.sectionId);

          if (summary && details) {
            // Add keyboard support
            summary.addEventListener('keydown', (e) => {
              if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                details.open = !details.open;
              }
            });

            // Add accessibility attributes
            summary.setAttribute('role', 'button');
            summary.setAttribute('aria-expanded', details.open ? 'true' : 'false');

            // Update aria-expanded on toggle
            details.addEventListener('toggle', () => {
              summary.setAttribute('aria-expanded', details.open ? 'true' : 'false');
            });
          }
        });
      }
    }

    // Initialize on DOM load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        new FaqAccordion{{ section.id | replace: '-', '_' }}();
      });
    } else {
      new FaqAccordion{{ section.id | replace: '-', '_' }}();
    }

    // Re-initialize on Shopify section events (theme editor)
    document.addEventListener('shopify:section:load', (event) => {
      if (event.detail.sectionId === '{{ section.id }}') {
        new FaqAccordion{{ section.id | replace: '-', '_' }}();
      }
    });
  })();
</script>

