<div class="text-section-{{ section.id }} st_check-section--{{ section.id }}">
  <div class="page-width">
    <div class="text-section-wrapper-{{ section.id }}">
      <div class="text-section-content-{{ section.id }}">
        {%- if section.settings.title != blank -%}
          <h2 class="text-section-title-{{ section.id }} {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="text-section-text-{{ section.id }} rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
          <div class="text-section-button-wrapper-{{ section.id }}">
            <a href="{{ section.settings.button_link }}" class="text-section-button-{{ section.id }}">
              {{ section.settings.button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  'use strict';
  const sectionId = '{{ section.id }}';
  const sectionSelector = '.st_check-section--' + sectionId;
  
  function checkAppEmbed() {
    const embedMarker = document.getElementById('temply-app-embed-active');
    const sectionElement = document.querySelector(sectionSelector);
    
    if (!sectionElement) return;
    
    if (!embedMarker) {
      // Hide section completely, no warning banner
      sectionElement.style.display = 'none';
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', checkAppEmbed);
  } else {
    checkAppEmbed();
  }
})();
</script>

<style>
  .text-section-{{ section.id }} {
    {% if section.settings.background_gradient != blank %}
      background: {{ section.settings.background_gradient }};
    {% endif %}
    {% if section.settings.section_background_color != blank and section.settings.background_gradient == blank %}
      background-color: {{ section.settings.section_background_color }};
    {% endif %}
  }

  .text-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .text-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .text-section-wrapper-{{ section.id }} {
    display: flex;
    justify-content: {{ section.settings.content_horizontal_alignment }};
    align-items: {{ section.settings.content_vertical_alignment }};
  }

  .text-section-content-{{ section.id }} {
    max-width: {{ section.settings.max_width }}px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap }}px;
    text-align: {{ section.settings.text_alignment }};
  }

  .text-section-title-{{ section.id }} {
    margin: 0;
    font-weight: 700;
    {% if section.settings.title_color != blank %}
      color: {{ section.settings.title_color }};
    {% endif %}
  }

  .text-section-text-{{ section.id }} {
    margin: 0;
    line-height: 1.6;
    {% if section.settings.text_color != blank %}
      color: {{ section.settings.text_color }};
    {% endif %}
  }

  .text-section-text-{{ section.id }} p:first-child {
    margin-top: 0;
  }

  .text-section-text-{{ section.id }} p:last-child {
    margin-bottom: 0;
  }

  /* Button Styles */
  .text-section-button-wrapper-{{ section.id }} {
    display: flex;
    {% if section.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif section.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .text-section-button-{{ section.id }} {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    border-radius: {{ section.settings.button_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    
    {% if section.settings.button_background != blank %}
      background: {{ section.settings.button_background }};
    {% else %}
      background: #000;
    {% endif %}
    
    {% if section.settings.button_text_color != blank %}
      color: {{ section.settings.button_text_color }};
    {% else %}
      color: #fff;
    {% endif %}
    
    {% if section.settings.button_border_width > 0 %}
      border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    {% else %}
      border: none;
    {% endif %}
  }

  .text-section-button-{{ section.id }}:hover {
    {% if section.settings.button_hover_background != blank %}
      background: {{ section.settings.button_hover_background }};
    {% else %}
      opacity: 0.8;
    {% endif %}
    
    {% if section.settings.button_hover_text_color != blank %}
      color: {{ section.settings.button_hover_text_color }};
    {% endif %}
  }
</style>

